		<div>
			<%= label_tag :criterion, 'Professor:' %>
			<%= text_field_tag :criterion %>
			<%= submit_tag 'Search' %>
		</div>
		<div>
			<sub>
				Write the name of the professor.
			</sub>
		</div>
		<% end -%>
	</div>
