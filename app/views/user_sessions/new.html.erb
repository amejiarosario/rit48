<div id="mainWrapperHome">
 	<div id="loginHome">
    <img src="images/header4.png" />
    <br/>

    <%= form_for(@user_session) do |f| %>
    <% if @user_session.errors.any? %>

    <div id="error_explanation">
      <h2><%= pluralize(@user_session.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% @user_session.errors.full_messages.each do |msg| %>
        <li>
          <%= msg %>
        </li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <br/>
    <div id="boxHome">
      <%= f.label :login %><br  />
      <%= f.text_field :login, :size=>30, :class=>"inputStyle" %>@rit.edu
      <br/><br/>
      <%= f.label :password %><br />
      <%= f.password_field :password, :size=>30, :class=>"inputStyle" %>

      <br/><br/>    
      <%= f.submit '', :class => "loginbtn" %>
      <%= link_to 'New in town?', register_path %>
    </div>
    <% end %>
  </div>
</div>
